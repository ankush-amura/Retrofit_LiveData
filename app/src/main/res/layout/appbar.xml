<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topViewMain"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@drawable/main_top_custom_rect"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_vector_btn_selector"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_marginStart="@dimen/dimen15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_marginLeft="@dimen/dimen25dp"
        android:layout_marginStart="@dimen/dimen25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flightJourney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/textSize19sp" />

        <TextView
            android:id="@+id/flightDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0dp"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:textSize="@dimen/textSize19sp" />

    </LinearLayout>

    <Button
        android:id="@+id/Portrait"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Portrait"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_marginStart="@dimen/dimen15dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/Landscape"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Landscape"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_marginStart="@dimen/dimen15dp"
        android:layout_gravity="center" />

</LinearLayout>